<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button style="@style/Button" android:id="@+id/bt1" />

            <Button style="@style/Button" android:id="@+id/bt2"/>

            <Button style="@style/Button" android:id="@+id/bt3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button style="@style/Button" android:id="@+id/bt4"/>

            <Button style="@style/Button" android:id="@+id/bt5"/>

            <Button style="@style/Button" android:id="@+id/bt6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button style="@style/Button" android:id="@+id/bt7"/>

            <Button style="@style/Button" android:id="@+id/bt8"/>

            <Button style="@style/Button" android:id="@+id/bt9"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/pusk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/start"
        android:onClick="Start"/>

</LinearLayout>